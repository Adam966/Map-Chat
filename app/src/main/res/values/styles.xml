<resources>

    <!-- Base application theme. -->
    <style name="AppNormal" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="bkgcolor">#FFFFFF</item>
        <item name="barcolor">#293896</item>
        <item name="iconcolor">#FF9750</item>
        <item name="coloriconchecked">#141B4A</item>
        <item name="textcolor">#FFFFFF</item>
        <item name="textcolor2">#293896</item>

        <!-- popup -->
        <item name="popupcolor">#293896</item>
        <item name="popupcolortext">#FFFFFF</item>

        <!-- chat -->
        <item name="chatbubblebkg">#293896</item>

    </style>

    <style name="AppDark" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="bkgcolor">#242424</item>
        <item name="barcolor">#090A0A</item>
        <item name="iconcolor">#FF9750</item>
        <item name="coloriconchecked">#3E4CA0</item>
        <item name="textcolor">#FF9750</item>
        <item name="textcolor2">#FFFFFF</item>

        <!-- popup -->
        <item name="popupcolor">#171A1A</item>
        <item name="popupcolortext">#FFFFFF</item>

        <!-- chat -->
        <item name="chatbubblebkg">#293896</item>

    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_bkg</item>
    </style>

    <style name="AppNormal.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppNormal.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppNormal.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- Transparent background -->
    <style name="Transparent" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowNoTitle">true</item>

        <item name="iconcolor">#293896</item>
        <item name="textcolor">#FFFFFF</item>
        <item name="textcolor2">#FFFFFF</item>

    </style>

    <!-- Transparent background -->
    <style name="TransparentDark" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowNoTitle">true</item>

        <item name="iconcolor">#FF9750</item>
        <item name="textcolor">#FF9750</item>
        <item name="textcolor2">#FFFFFF</item>
    </style>

</resources>
